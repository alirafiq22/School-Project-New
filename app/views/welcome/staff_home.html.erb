<h1>Staff_Home Page</h1>

<!--<a href="#" class="btn btn-default">Add to Buy List</a>-->
<%= link_to "New Student", new_student_path, class: "btn btn-info"%>
<%= link_to "Update Student", students_path, class: "btn btn-info"%>
<%= link_to "Update Student Marks", student_marks_path, class: "btn btn-success"%>
<%= link_to "Delete Student", new_student_path, class: "btn btn-warning"%>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
      	<td><%= student.reg_no %></td>
      	<td><%= student.roll_no %></td>
      	<td><%= student.name %></td>
      	<td><%= student.age %></td>
      	<td><%= student.gender %></td>
      	<td><%= student.father_name %></td>
      	<td><%= student.mother_name %></td>
      	<td><%= student.standard %></td>
       <!-- <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>